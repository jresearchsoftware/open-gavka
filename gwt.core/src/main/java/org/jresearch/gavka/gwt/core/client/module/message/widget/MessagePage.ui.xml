<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:u='urn:import:com.tractionsoftware.gwt.user.client.ui' xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
	.dockLayoutPanel>div {
		overflow: visible !important;
	}

	.header {
		padding: 10px;
	}
	</ui:style>
	<g:DockLayoutPanel unit="EM" height="100%" addStyleNames="{style.dockLayoutPanel}">
		<!-- Controls. -->
		<g:north size="10">
			<g:FormPanel action="/api/rest/messages/export" ui:field="exportForm">
				<g:HTMLPanel width="100%" addStyleNames="{style.header}">
					<g:HTMLPanel width="100%" addStyleNames="{style.header}">
						<label>Topic:</label>
						<g:ListBox ui:field='topic' name='topic' width="30%"/>
						<label>Key:</label>
						<g:TextBox ui:field='key' name='key' width="30%"/>
						<label>From date:</label>
						<u:UTCDateBox ui:field='date'/>
						<label>time:</label>
						<u:UTCTimeBox ui:field="time"/>
					</g:HTMLPanel>
					<g:HTMLPanel width="100%" addStyleNames="{style.header}">
						<label>Key format:</label>
						<g:ListBox ui:field='keyFormat' name='keyFormat' width="30%"/>
						<label>Message format:</label>
						<g:ListBox ui:field='messageFormat' name='messageFormat' width="30%"/>
						<g:Hidden name="from" ui:field="hiddenFrom"/>
						<g:Button ui:field="searchBtn" text="Search"/>
						<g:Button ui:field="exportBtn" text="Export"/>
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:FormPanel>
		</g:north>
		<!-- DataGrid. -->
		<g:center>
			<c:DataGrid ui:field='messages'/>
		</g:center>
		<!-- Pager. -->
		<g:south size="3">
			<g:HTMLPanel>
				<g:Button ui:field="nextBtn" text="Next"/>
				<g:Button ui:field="prevBtn" text="Prev"/>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>

</ui:UiBinder>