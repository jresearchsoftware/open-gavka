<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:u='urn:import:com.tractionsoftware.gwt.user.client.ui'
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
>
    <ui:style>
    .dockLayoutPanel>div {
    	overflow: visible !important;
    }
    .header {
    	padding: 10px;
    }
    </ui:style>
    <g:DockLayoutPanel unit="EM" height="100%" addStyleNames="{style.dockLayoutPanel}">
        <!-- Controls. -->
        <g:north size="3">
            <g:HTMLPanel width="100%" addStyleNames="{style.header}">
                <label>Topic:</label>
                <g:ListBox ui:field='topic' width="50%" />
                <label>AVRO:</label>
                <g:CheckBox ui:field='avro'/>
                <label>From:</label>
				<u:UTCDateBox ui:field="from"/>
                <label>To:</label>
				<u:UTCDateBox ui:field="to"/>
            </g:HTMLPanel>
        </g:north>
        <!-- DataGrid. -->
        <g:center>
            <c:DataGrid ui:field='messages'/>
        </g:center>
        <!-- Pager. -->
        <g:south size="3">
            <g:HTMLPanel>
                <table style="width:100%">
                    <tr>
                        <td align='center'>
                            <c:SimplePager ui:field='pager'/>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>